<h1>Movies</h1>

<%= link_to "New movie", new_movie_path, class: "btn btn-primary mb-4" %>

<div id="movies", class="row d-flex">
  <% @movies.each do |movie| %>
    <div class="col-3 mt-4">
      <%= link_to movie_path(movie), class: "card-link text-decoration-none" do %>
        <%= render movie %>
      <% end %>
    </div>
  <% end %>
</div>
